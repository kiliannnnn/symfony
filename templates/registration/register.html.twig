
{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
<div class="max-w-md mx-auto bg-white rounded-lg shadow p-8 mt-8">
    <h1 class="text-2xl font-bold mb-6 text-blue-700 text-center">Créer un compte</h1>
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="bg-red-100 text-red-700 p-2 rounded mb-4">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}
        <div class="mb-4">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="mb-4">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>
        <div class="mb-4">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'inline text-sm text-gray-700'}}) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>
        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition">S'inscrire</button>
    {{ form_end(registrationForm) }}
    <div class="mt-4 text-center">
        <a href="{{ path('app_login') }}" class="text-blue-600 hover:underline">Déjà inscrit ? Se connecter</a>
    </div>
</div>
{% endblock %}
