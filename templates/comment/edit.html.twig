{% extends 'base.html.twig' %}

{% block title %}Éditer le commentaire{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto bg-white rounded-lg shadow p-8 mt-8">
    <h1 class="text-2xl font-bold mb-6">Éditer le commentaire</h1>

    {{ form_start(form) }}
        {{ form_widget(form.content, {'attr': {'class': 'w-full border rounded px-3 py-2'}}) }}
        <div class="mt-4 text-right">
            <button class="bg-blue-600 text-white px-4 py-2 rounded">Enregistrer</button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
