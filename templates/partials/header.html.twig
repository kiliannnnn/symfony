<header class="bg-gradient-to-r from-blue-700 to-blue-500 text-white shadow-md">
    <div class="container mx-auto flex items-center justify-between py-4 px-6">
        <!-- Left: Logo/Title -->
        <div class="flex-shrink-0">
            <a href="/" class="text-2xl font-bold hover:text-blue-200 transition">Symfony</a>
        </div>
        <!-- Center: Navigation -->
        <nav class="flex-1 flex justify-center">
            <ul class="flex space-x-6">
                <li><a href="/" class="hover:text-blue-200 transition font-medium">Accueil</a></li>
                <li><a href="{{ path('article_list') }}" class="hover:text-blue-200 transition font-medium">Articles</a></li>
                <li><a href="{{ path('contact') }}" class="hover:text-blue-200 transition font-medium">Contact</a></li>
