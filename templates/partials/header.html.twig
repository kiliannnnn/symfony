                    <li><a href="/admin" class="hover:text-yellow-300 transition font-medium">Admin</a></li>
                {% endif %}
            </ul>
        </nav>
        <!-- Right: Account links -->
        <nav class="flex-shrink-0">
            <ul class="flex space-x-4 items-center">
                {% if app.user %}
                    <li>
                        {# go to a small controller that stores the referer then redirects to the firewall logout path #}
                        <a href="{{ path('app_prelogout') }}" class="hover:text-blue-200 transition font-medium">DÃ©connexion</a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('app_login') }}" class="hover:text-blue-200 transition font-medium">Connexion</a>
                    </li>
                    <li>
                        <a href="{{ path('app_register') }}" class="hover:text-blue-200 transition font-medium">Inscription</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
</header>
