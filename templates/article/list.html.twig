{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block content %}
    <div class="max-w-5xl mx-auto">
        <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold">Articles</h2>
            <form method="get" class="flex">
                <input type="search" name="q" value="{{ app.request.get('q') }}" placeholder="Recherche..." class="border rounded px-3 py-2" />
                <button class="ml-2 bg-blue-600 text-white px-3 py-2 rounded">Rechercher</button>
            </form>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
            {% for article in articles %}
                {% set hasTags = article.tags is defined and article.tags|length > 0 %}
                {% if article.slug %}
                    <article class="block bg-white shadow rounded overflow-hidden hover:shadow-lg transition">
                        <a href="{{ path('article_show', {'slug': article.slug}) }}">
                            {% if article.cover %}
                                <img src="{{ asset('uploads/articles/' ~ article.cover) }}" alt="{{ article.title }}" class="w-full h-40 object-cover">
                            {% else %}
                                <img src="https://placehold.co/800x400?text=No+image" alt="No image" class="w-full h-40 object-cover">
                            {% endif %}
                        </a>
                        <div class="p-4">
                            <div class="flex items-start justify-between mb-2">
                                <a href="{{ path('article_show', {'slug': article.slug}) }}" class="text-lg font-semibold text-blue-600 hover:underline">{{ article.title }}</a>
                                {% if article.category %}
                                    <a href="{{ path('article_list', {category: article.category.slug}) }}" class="inline-flex items-center text-sm font-semibold bg-blue-50 text-blue-700 px-2.5 py-0.5 rounded-full border border-blue-100 hover:bg-blue-100 transition">{{ article.category.name }}</a>
                                {% endif %}
                            </div>

                            <p class="text-gray-800 mb-3">{{ article.content|striptags|split(' ')|slice(0,30)|join(' ') ~ '…' }}</p>

                            <div class="mt-4 flex items-center justify-between">
                                <div>
                                    {% if hasTags %}
                                        <div class="flex flex-wrap items-center -mr-2">
                                            {% for tag in article.tags %}
                                                {% set tagUrl = tag.slug ? path('article_list', {tag: tag.slug}) : path('article_list', {tagId: tag.id}) %}
                                                <a href="{{ tagUrl }}" class="inline-flex items-center text-[11px] font-medium bg-gray-50 text-gray-700 px-2.5 py-0.5 rounded-full border border-gray-200 mr-2 mb-0.5 hover:bg-gray-100 transition">{{ tag.name }}</a>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>

                                <div class="text-sm text-gray-500">{{ article.createdAt|date('d/m/Y') }}</div>
                            </div>
                        </div>
                    </article>
                {% else %}
                    <article class="bg-white shadow rounded overflow-hidden">
                        {% if article.cover %}
                            <img src="{{ asset(article.cover) }}" alt="{{ article.title }}" class="w-full h-40 object-cover">
                        {% endif %}
                        <div class="p-4">
                            <div class="flex items-start justify-between mb-2">
                                <h3 class="text-lg font-semibold">{{ article.title }}</h3>
                                {% if article.category %}
                                    <span class="inline-flex items-center text-sm font-medium bg-blue-50 text-blue-700 px-3 py-1 rounded-full border border-blue-100">{{ article.category.name }}</span>
                                {% endif %}
                            </div>

                            <p class="text-gray-800">{{ article.content|striptags|split(' ')|slice(0,30)|join(' ') ~ '…' }}</p>

                            {% if hasTags %}
                                <div class="mt-3 flex flex-wrap items-center -mr-2">
                                    {% for tag in article.tags %}
                                        <span class="inline-flex items-center text-xs font-medium bg-gray-50 text-gray-700 px-3 py-1 rounded-full border border-gray-200 mr-2 mb-2 hover:bg-gray-100 transition">{{ tag.name }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}

                            <div class="mt-4 flex justify-end text-sm text-gray-500">{{ article.createdAt|date('d/m/Y') }}</div>
                        </div>
                    </article>
                {% endif %}
            {% else %}
                <p>Aucun article trouvé.</p>
            {% endfor %}
        </div>

        <div class="mt-6 flex justify-center items-center space-x-4">
            {% if page > 1 %}
                <a href="?page={{ page - 1 }}{% if app.request.get('q') %}&q={{ app.request.get('q') }}{% endif %}" class="px-3 py-2 bg-gray-200 rounded">&larr; Précédent</a>
            {% endif %}

            <span>Page {{ page }} / {{ totalPages }}</span>

            {% if page < totalPages %}
                <a href="?page={{ page + 1 }}{% if app.request.get('q') %}&q={{ app.request.get('q') }}{% endif %}" class="px-3 py-2 bg-gray-200 rounded">Suivant &rarr;</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
