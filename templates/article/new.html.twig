{% extends 'base.html.twig' %}

{% block title %}Nouvel article - Mon site Symfony{% endblock %}

{% block content %}
    <div class="max-w-3xl mx-auto bg-white shadow p-6 rounded">
        <h1 class="text-2xl font-bold mb-4">Cr√©er un nouvel article</h1>

        {{ form_start(form) }}
            <div class="mb-4">
                {{ form_label(form.title) }}
                {{ form_widget(form.title, {'attr': {'class': 'w-full border rounded px-3 py-2'}}) }}
                <div class="text-red-600 text-sm mt-1">{{ form_errors(form.title) }}</div>
            </div>

            <div class="mb-4">
                {{ form_label(form.content) }}
                {{ form_widget(form.content, {'attr': {'class': 'w-full border rounded px-3 py-2'}}) }}
                <div class="text-red-600 text-sm mt-1">{{ form_errors(form.content) }}</div>
            </div>

            <div class="flex justify-end">
                <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Enregistrer</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
